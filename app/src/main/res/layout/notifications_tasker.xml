<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border_view_post"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/icon_notification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_ic_notification" />

        <TextView
            android:id="@+id/notification_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/icon_notification"
            android:text="Notification Message"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_message_tv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/icon_notification"
            android:text="Message Time" />

        <TextView
            android:id="@+id/message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_time"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/icon_notification"
            android:text="Message Date" />

        <Button
            android:id="@+id/btnDetail"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_message_tv"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_view_post"
            android:text="View Detail" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>